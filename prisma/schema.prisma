generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Unit {
    id             Int     @id @default(autoincrement())
    number         Int     @unique
    connectedUnits Unit[]  @relation("ConnectedUnits")
    connectedTo    Unit[]  @relation("ConnectedUnits")
    building       Int
    squareFeet     Int     @default(1250)
    bathroom       Boolean @default(true)
    office         Boolean @default(false)
    occupied       Boolean @default(false)
    tenant         Tenant?
}

model Tenant {
    id        Int    @id @default(autoincrement())
    firstName String
    lastName  String
    email     String @unique
    phone     String @unique
    unit      Unit   @relation(fields: [unitId], references: [id])
    unitId    Int    @unique
}
