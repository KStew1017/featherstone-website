generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Units {
    id            Int     @id @default(autoincrement())
    number        Int     @unique
    connectedWith Units[]  @relation("ConnectedUnits")
    connectedTo   Units[]  @relation("ConnectedUnits")
    building      Int
    squareFeet    Int     @default(1250)
    bathroom      Boolean @default(true)
    office        Boolean @default(false) 
    occupied      Boolean @default(false)
    tenant        Tenants? @relation(fields: [tenantId], references: [id])
    tenantId      Int?
}

model Tenants {
    id        Int    @id @default(autoincrement())
    firstName String
    lastName  String
    email     String @unique
    phone     String @unique
    unit      Units[]
}
