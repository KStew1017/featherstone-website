// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Unit {
    id          Int     @id @default(autoincrement())
    numberId    Int?
    number      Unit?   @relation("ConnectedUnits", fields: [numberId], references: [id])
    connectedTo Unit[]  @relation("ConnectedUnits")
    building    Int
    squareFeet  Int     @default(1250)
    bathroom    Boolean @default(true)
    office      Boolean @default(false)
    occupied    Boolean @default(false)
    tenant      Tenant? @relation(fields: [tenantId], references: [id])
    tenantId    Int?
}

model Tenant {
    id        Int    @id @default(autoincrement())
    firstName String
    lastName  String
    email     String @unique
    phone     String @unique
    unit      Unit[]
}
